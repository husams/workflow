{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/command_logger.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/safety_guard.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/python_formatter.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/test_runner.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/context_injector.py"
          }
        ]
      }
    ]
  }
}